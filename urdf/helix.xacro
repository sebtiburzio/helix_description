<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

<!-- Very basic representation of Helix motor base and pulleys -->
<!-- TODO - effort/velocity limits taken from dynamixel_hardware_examples package, not sure what they correpsond to wrt current -->

<material name='black'>
  <color rgba="0.2 0.2 0.2 1.0"/>
</material>
<material name='clear'>
  <color rgba="0.2 0.2 0.2 0.2"/>
</material>

<xacro:macro name="helix" params="parent *origin">
  <joint name="origin_to_base" type="fixed">
    <xacro:insert_block name="origin" />
    <parent link="${parent}" />
    <child link="base" />
    <axis xyz="0 0 1" />
  </joint>

  <!-- Base -->
  <link name="base">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.01" radius="0.15"/>
      </geometry>
      <material name='clear'/>
    </visual>
    <visual>
      <origin xyz="0 0 0.07" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.01" radius="0.15"/>
      </geometry>
      <material name='clear'/>
    </visual>
     <visual>
      <origin xyz="0 0 0.14" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.01" radius="0.15"/>
      </geometry>
      <material name='clear'/>
    </visual>
  </link>

  <!-- Joint 0 -->
  <joint name="joint0" type="revolute">
    <parent link="base"/>
    <child link="link0"/>
    <origin xyz="-0.043 0.025 0.12" rpy="0 0 4.2"/>
    <axis xyz="1 0 0"/>
    <limit velocity="4.8" effort="1" lower="-3.0" upper="3.0" />
  </joint>

   <!-- Link 0 -->
  <link name="link0">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.57 0"/>
      <geometry>
        <cylinder length="0.015" radius="0.02"/>
